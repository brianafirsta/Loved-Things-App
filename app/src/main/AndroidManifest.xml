<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LovedThingsApp"
        tools:targetApi="31">
        <activity
            android:name=".Activity.DetailedActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SepatuPriaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.AtasanPriaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.BawahanPriaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.SepatuWanitaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.AtasanWanitaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.BawahanWanitaActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity3"
            android:exported="false" />
        <activity
            android:name=".Activity.MainActivity2"
            android:exported="false" />
        <activity
            android:name=".Activity.ProfilActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ResetpassActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.LoginActivity"
            android:label="Login Activity"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lovedthingsapp.Activity.LoginActivity" />
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:label="Register Activity"
            android:parentActivityName=".Activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.lovedthingsapp.Activity.RegisterActivity" />
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>